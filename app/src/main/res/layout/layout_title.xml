<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/title_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <RelativeLayout
            android:id="@+id/backRL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_current_model_default"
                android:layout_marginLeft="20dp"
                android:text="当前模型"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_current_model"
                android:layout_marginLeft="20dp"
                android:text="XY"
                android:layout_centerHorizontal="true"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:layout_below="@+id/tv_current_model_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:letterSpacing="0.058"
            android:textColor="#333333"
            android:textSize="17sp"
            tools:text="textview" />

        <RelativeLayout
            android:id="@+id/right_rl"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/right"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="确定"
                android:padding="5dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_sure_selector" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>